pipeline {
  agent {
    docker {
      image 'abhishekf5/maven-abhishek-docker-agent:v1'
      args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
    }   
  }
  stage('Checkout') {
    steps{
      sh 'echo passed'
    }
  }

  stage('Build & Test') {
    sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && mvn clean package'
  }

  stage('Static Code Analysis') {
    environment {
      SONAR_URL = "http://54.237.121.64:9000/"
    }
    steps{
    withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]){
      sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && mvn sonar:sonar -Dsonar.login=$SONAR_AUTH_TOKEN -Dsonar.host.url=${SONAR_URL}'
    }
    }
  }

  stage('Build & Push the Image') {
    script{
      sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && docker build -t ${DOCKER_IMAGE} .'
      def dockerImage = docker.image("${DOCKER_IMAGE}")
      docker.withRegistry('http://index.docker.io/v1/', "docker-creds") {dockerImage.push()}
    }
  }

  stage('update Deployment File') {
    environment {
      GIT_REPO_NAME = "Jenkins-P1"
      GIT_USER_NAME = "JoinDevops0425"
    }
    steps {
      withCredentials( [string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]){
        sh ''' 
        git config user.mail "joindevops0425@gmail.com"
        git config user.name "joindevops0425"
        BUILD_NUMBER=${BUILD_NUMBER}
        sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" java-maven-sonar-argocd-helm-k8s/spring-boot-app-anifests/deployment.yml
        git add java-maven-sonar-argocd-helm-k8s/spring-boot-app-anifests/deployment.yml
        git commit -m "update deployment image to version ${BUILD_NUMBER}"
        git push http://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
        '''
      }
    }
  }

}